   {
	class = CBitmapMuzzleFlame;
      
	[properties]
      	{
         	dir = dir;
         	colorMap=0.2 0.1 1.0 0.01 0.1 0.2 0.3 0.01 0 0 0 0.01; 
          	size=-5;
          	length=-25;
          	sizeGrowth=0.75;
          	ttl=13;
          	frontOffset=0;
