		Texture=smoke;
		airdrag=0.8;
		particleLife=30;
		particleLifeSpread=0;
		numParticles=15;
		particleSpeed=5;
		particleSpeedSpread=2;
		particleSize=1;
		particleSizeSpread=3;
		emitRot=0;
		emitRotSpread=20;
		directional=0;
		}
	air=1;
	water=1;
	ground=1;
	count=1;
	}
